<h3>Running Coupons (publishing)</h3>
<ul class="coupons">
  {{#data}}
	{{#publishing}}
    <li>
      <a href="#" data-route="coupon/{{ id }}">
        <p>{{name}} <span class="triangle">${{price}}</span></p>
        <p><img src="{{logo_url}}"/></p>
        <p>Brief: {{description}}</p>
      </a>
    </li>
    {{/publishing}}
  {{/data}}
</ul>

